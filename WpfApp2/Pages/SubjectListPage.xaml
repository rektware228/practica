<Page x:Class="WpfApp2.Pages.SubjectListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SubjectListPage">

    <Grid>
        <StackPanel>
            <ListView x:Name="MyList">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding ID_discipline}" Width="30" Header="ID"></GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding volume}" Width="100" Header="Кол-во часов"></GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding name}" Width="190" Header="Наимнование"></GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Department.name}" Width="220" Header="Кафедра"></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
