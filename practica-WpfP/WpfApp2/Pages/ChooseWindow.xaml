<Page x:Class="WpfApp2.Pages.ChooseWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChooseWindow">

    <Grid>
        <StackPanel Width="340" Orientation="Horizontal" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center">
                <Button Width="160" x:Name="StudentBTN" Click="StudentBTN_Click">Список студентов</Button>
                <Button Width="160" x:Name="EmployeeBTN" Click="EmployeeBTN_Click">Список сотрудников</Button>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <Button Width="160" x:Name="ExamsBTN" Click="ExamsBTN_Click">Экзамены</Button>
                <Button Width="160" x:Name="SubjectsBTN" Click="SubjectsBTN_Click" >Дисциплины</Button>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
